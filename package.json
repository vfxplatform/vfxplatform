{
  "name": "vfxplatform",
  "version": "2.0.0",
  "description": "VFX Reference Platform website",
  "scripts": {
    "build:css": "tailwindcss -i ./assets/css/main.css -o ./assets/css/output.css --minify",
    "watch:css": "tailwindcss -i ./assets/css/main.css -o ./assets/css/output.css --watch",
    "dev": "npm run watch:css & bundle exec jekyll serve --livereload",
    "build": "npm run build:css && bundle exec jekyll build"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.0",
    "@tailwindcss/typography": "^0.5.10",
    "@tailwindcss/forms": "^0.5.7",
    "postcss": "^8.4.32",
    "autoprefixer": "^10.4.16"
  }
}
